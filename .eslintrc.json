{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:import/recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": ["prettier", "import"],
  "rules": {
    "prettier/prettier": "error",
    "no-unused-vars": "warn",
    "no-undef": "error",
    "import/no-unresolved": "off"
  },
  "overrides": [
    {
      "files": ["**/*.html"],
      "processor": "eslint-plugin-html"
    }
  ]
}
